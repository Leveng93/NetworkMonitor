<Window x:Class="NetworkMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkMonitor"
        xmlns:viewModel="clr-namespace:NetworkMonitor.ViewModels"
        mc:Ignorable="d"
        Title="Network monitor" Height="350" Width="525">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="3" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <GridSplitter Grid.Row="2" Height="3" HorizontalAlignment="Stretch" />

        <DockPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding MonitorStart}" >Start</Button>
                <Button Command="{Binding MonitorStop}">Stop</Button>
                <Button Command="{Binding ClearPacketCollection}">Clear</Button>
            </StackPanel>
        </DockPanel>
        
        <ListView ItemsSource="{Binding Path=Packets, Mode=OneWay}" Grid.Row="1" Name="lstw" Margin="3">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="№" DisplayMemberBinding="{Binding PacketsReceivedCount, Mode=OneWay}" Width="auto"></GridViewColumn>
                        <GridViewColumn Header="Time" Width="auto"></GridViewColumn>
                        <GridViewColumn Header="Source" DisplayMemberBinding="{Binding SourceIP, Mode=OneWay}" Width="auto"></GridViewColumn>
                        <GridViewColumn Header="Destination" DisplayMemberBinding="{Binding DestinationIP, Mode=OneWay}" Width="auto"></GridViewColumn>
                        <GridViewColumn Header="Protocol" DisplayMemberBinding="{Binding Protocol, Mode=OneWay}" Width="auto"></GridViewColumn>
                        <GridViewColumn Header="Length" DisplayMemberBinding="{Binding MessageLength, Mode=OneWay}" Width="auto"></GridViewColumn>
                        <GridViewColumn Header="Info" Width="auto"></GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="3" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <GridSplitter Grid.Column="1" Width="3" HorizontalAlignment="Stretch" />

        </Grid>

    </Grid>
</Window>
